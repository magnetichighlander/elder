<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Mood Emoji and Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewMoodEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="😊"
            android:textSize="32sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/textViewMoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Счастливый"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Mood Date -->
    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jan 1, 2025"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray" />

    <!-- Energy Level -->
    <TextView
        android:id="@+id/textViewEnergyLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Энергия: Средний"
        android:layout_marginTop="4dp" />

    <!-- Optional Note -->
    <TextView
        android:id="@+id/textViewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a note about the mood."
        android:layout_marginTop="4dp"
        android:visibility="gone" />

</LinearLayout>
