<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="?attr/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Achievements"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/elderly_friendly_fonts"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unlock achievements by completing exercises and maintaining streaks!"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Progress Overview Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trophy"
                android:tint="@color/success_color"
                android:layout_marginEnd="16dp"
                android:contentDescription="Trophy icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textProgressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achievement Progress"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text_color"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textProgressDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 of 5 achievements unlocked"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    tools:text="3 of 5 achievements unlocked" />

            </LinearLayout>

            <TextView
                android:id="@+id/textProgressPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/success_color"
                tools:text="60%" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Achievements Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/achievementsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_achievement" />

</LinearLayout>
