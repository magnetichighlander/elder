<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_50"
    tools:context=".ui.exercise.ExerciseSessionActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/colorPrimary">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/button_circular"
            android:drawableStart="@android:drawable/ic_menu_revert"
            android:text=""
            android:contentDescription="Back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textExerciseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                tools:text="Neck Stretch" />

            <TextView
                android:id="@+id/textExerciseDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                tools:text="Duration: 30 seconds" />

        </LinearLayout>

    </LinearLayout>

    <!-- Exercise Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Animation Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieExerciseAnimation"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="false" />

                    <TextView
                        android:id="@+id/textExerciseDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="16sp"
                        android:textAlign="center"
                        android:textColor="@color/gray_700"
                        tools:text="Gently stretch your neck by moving your head slowly from side to side" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Timer and Progress Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/textTimer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textAlign="center"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="monospace"
                        tools:text="00:30" />

                    <ProgressBar
                        android:id="@+id/progressBarExercise"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginBottom="8dp"
                        android:progressTint="?attr/colorPrimary"
                        android:max="100"
                        tools:progress="50" />

                    <TextView
                        android:id="@+id/textProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textAlign="center"
                        android:textColor="@color/gray_600"
                        tools:text="50%" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:background="@color/white"
        android:elevation="8dp">

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Stop"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/button_emergency"
            android:enabled="false" />

        <Button
            android:id="@+id/buttonStartPause"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:text="Start"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_primary" />

    </LinearLayout>

</LinearLayout>
