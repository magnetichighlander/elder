<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Progress Bar for loading indication -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- RecyclerView for displaying mood history -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMoodHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/btnFilterLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp" />

    <!-- TextView for empty state -->
    <TextView
        android:id="@+id/textViewEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Нет записей настроения"
        android:visibility="gone"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray" />

    <!-- Filter Buttons -->
    <LinearLayout
        android:id="@+id/btnFilterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnFilterWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="На этой неделе" />

        <Button
            android:id="@+id/btnFilterMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="В этом месяце" />

        <Button
            android:id="@+id/btnFilterAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Все записи" />

    </LinearLayout>

</RelativeLayout>
