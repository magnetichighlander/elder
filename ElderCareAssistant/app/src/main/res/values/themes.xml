<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ElderCareAssistant" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- High contrast colors for elderly users -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Large text appearances for accessibility -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Large.Headline</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Large.Body</item>
        
        <!-- Touch target sizes for elderly users -->
        <item name="minTouchTargetSize">48dp</item>
        
        <!-- Default text properties -->
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/primary_text_color</item>
        
        <!-- Button styling -->
        <item name="materialButtonStyle">@style/Widget.ElderCare.Button</item>
    </style>

    <!-- Base Widget.ElderCare style for consistent theming -->
    <style name="Widget.ElderCare" parent="Theme.Material3.DayNight">
        <!-- Общие свойства для всех компонентов -->
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Custom button style for elderly-friendly design -->
    <style name="Widget.ElderCare.Button" parent="Widget.ElderCare">
        <!-- Специфичные свойства кнопки -->
        <item name="backgroundTint">@color/purple_500</item>
    </style>

    <!-- Large text appearances for elderly users -->
    <style name="TextAppearance.Large.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Large.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Emergency button style with distinct appearance -->
    <style name="Widget.ElderCare.Button.Emergency" parent="Widget.ElderCare.Button">
        <item name="backgroundTint">@color/emergency_button_color</item>
        <item name="strokeColor">@color/emergency_stroke_color</item>
        <item name="strokeWidth">@dimen/stroke_width_medium</item>
    </style>

    <!-- Outlined button style for secondary actions -->
    <style name="Widget.ElderCare.Button.Outlined" parent="Widget.ElderCare">
        <!-- Свойства outlined-кнопки -->
        <item name="strokeColor">@color/purple_500</item>
    </style>

    <!-- Large icon style for better visibility -->
    <style name="Widget.ElderCare.Icon">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    
    <!-- Tab text appearance for elderly-friendly tabs -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/elderly_friendly_fonts</item>
    </style>
</resources>
